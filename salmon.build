
. ./tools.config

set -e

if [ ! -f ${PREFIX}/include/lzma.h ]; then
    bash -x lzma.build
fi


git clone https://github.com/COMBINE-lab/salmon.git
mkdir salmon/build
cd salmon/build 
cmake -DNO_IPO=TRUE -DFETCH_BOOST=TRUE -DCMAKE_INSTALL_PREFIX=${PREFIX} ..
make
make install
cd ../..
rm -rf salmon

