
. ./tools.config

set -e

VERSION=1.2.9
wget -q https://github.com/voutcn/megahit/archive/v${VERSION}.tar.gz
tar xzf v${VERSION}.tar.gz
rm v${VERSION}.tar.gz
cd megahit-${VERSION}
mkdir build
cd build
cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX:PATH=${PREFIX} ..
make
make install

cd ../..
rm -rf megahit-${VERSION}
