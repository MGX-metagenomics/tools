
. ./tools.config

set -e 

VERSION=2.3.0
wget -q https://github.com/gmarcais/Jellyfish/archive/v${VERSION}.tar.gz
tar xzf v${VERSION}.tar.gz
cd Jellyfish-${VERSION}
autoreconf -vif
./configure --prefix=${PREFIX}
make ${MAKE_FLAGS}
make install
ln -s ${PREFIX}/bin/jellyfish ${PREFIX}/bin/jellyfish-2
cd ..
rm -rf v${VERSION}.tar.gz Jellyfish-${VERSION}

